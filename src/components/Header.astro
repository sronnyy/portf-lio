<script>

document.addEventListener("DOMContentLoaded", () => {
  const header = document.getElementById("header");
  let lastScrollTop = 0;

  // Função para aplicar as transições
  const applyTransition = (styles) => {
    Object.assign(header.style, styles);
  };

  // Função para tratar o scroll
  const handleScroll = () => {
    const scrollTop = window.pageYOffset || document.documentElement.scrollTop;

    if (scrollTop > lastScrollTop) {
      if (header && scrollTop > header.offsetHeight) {
        applyTransition({
          transition: "transform 0.6s ease-out, opacity 0.6s ease-out, background-color 0.6s ease-out",
          transform: "translateY(-100%)",
          opacity: "0",
          backgroundColor: "transparent"
        });
      }
    } else {
      if (scrollTop === 0 && header) {
        applyTransition({
          transition: "transform 0.2s ease-in-out, opacity 0.3s ease-in-out, background-color 0.3s ease-in-out, margin-top 0.8s ease-in-out",
          transform: "translateY(0%)",
          opacity: "1",
          position: "",
          backgroundColor: "transparent",
          marginTop: "0"
        });
      } else if (header) {
        applyTransition({
          transition: "transform 0.4s ease-in-out, opacity 0.3s ease-in-out, background-color 0.3s ease-in-out, margin-top 0.8s ease-in-out",
          transform: "translateY(0%)",
          opacity: "1",
          position: "fixed",
          backgroundColor: "black",
          marginTop: "14px"
        });
      }
    }

    lastScrollTop = scrollTop;
  };

  // Adiciona um ouvinte de evento de rolagem (scroll) ao documento
  document.addEventListener("scroll", handleScroll);
});


    document.getElementById('open')?.addEventListener('click', () => {
      document.getElementById('menu')?.classList.remove('-translate-x-full');
      setTimeout(() => {
          document.body.classList.add('overflow-hidden'); // Adiciona overflow-hidden ao body após 3 segundos
          console.log('Menu aberto, overflow-hidden adicionado ao body após 3 segundos');
      }, 200); // 3000 milissegundos = 3 segundos
  });

    document.getElementById('close')?.addEventListener('click', () => {
        document.getElementById('menu')?.classList.add('-translate-x-full');
        document.body.classList.remove('overflow-hidden'); // Remove overflow-hidden do body imediatamente
        console.log('Menu fechado, overflow-hidden removido do body');
    });
</script>
