<script>

// Selecionando o elemento de cabeçalho
  const header = document.getElementById("header");

  // Variável para armazenar a posição atual do scroll
  let lastScrollTop = 0;

  // Função para verificar o movimento do scroll
  function onScroll() {
      const scrollTop = window.pageYOffset || document.documentElement.scrollTop;

      // Verifica se o scroll está indo para cima ou para baixo
      if (scrollTop > lastScrollTop) {
          // Scroll para baixo
          if (header && scrollTop > header.offsetHeight) {
              header.style.transition = "transform 0.6s ease-out, opacity 0.6s ease-out, background-color 0.6s ease-out";
              header.style.transform = "translateY(-100%)"; // Deslocamento para cima
              header.style.opacity = "0";
              header.style.backgroundColor = "transparent"; // Removendo a cor de fundo quando desaparecer
          }
      } else {
          // Scroll para cima
          if (scrollTop === 0 && header) {
              header.style.transition = "transform 0.2s ease-in-out, opacity 0.3s ease-in-out, background-color 0.3s ease-in-out"; // Transição mais rápida ao retornar ao topo
              header.style.transform = "translateY(0%)"; // Retorna à posição original
              header.style.opacity = "1";
              header.style.position = ""; // Remover a posição fixa quando estiver no topo
              header.style.backgroundColor = "transparent"; // Removendo o bg black quando estiver no topo
          } else if (header) {
              header.style.transition = "transform 0.4s ease-in-out, opacity 0.3s ease-in-out, background-color 0.3s ease-in-out";
              header.style.transform = "translateY(0%)"; // Garante que o cabeçalho esteja na posição correta ao rolar para cima
              header.style.opacity = "1";
              header.style.position = "fixed";
              header.style.backgroundColor = "black"; // Definindo o bg black quando o cabeçalho está fixo
          }
      }

      // Atualiza a posição do último scroll
      lastScrollTop = scrollTop;
  }
  // Adiciona um ouvinte de evento de rolagem (scroll) ao documento
  document.addEventListener("scroll", onScroll);



    document.getElementById('open')?.addEventListener('click', () => {
      document.getElementById('menu')?.classList.remove('-translate-x-full');
      setTimeout(() => {
          document.body.classList.add('overflow-hidden'); // Adiciona overflow-hidden ao body após 3 segundos
          console.log('Menu aberto, overflow-hidden adicionado ao body após 3 segundos');
      }, 200); // 3000 milissegundos = 3 segundos
  });

    document.getElementById('close')?.addEventListener('click', () => {
        document.getElementById('menu')?.classList.add('-translate-x-full');
        document.body.classList.remove('overflow-hidden'); // Remove overflow-hidden do body imediatamente
        console.log('Menu fechado, overflow-hidden removido do body');
    });
</script>
