<script>
  import Swiper from "swiper/bundle";

  var swiper1 = new Swiper(".mySwiper1", {
    slidesPerView: 1,
    loop: true,
    spaceBetween: 20,
    autoplay: {
    delay: 2000,
    disableOnInteraction: true,
    },
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },
    speed: 2000,


    navigation: {
        nextEl: ".button-next",
        prevEl: ".button-prev",
      },
 
  });
</script>